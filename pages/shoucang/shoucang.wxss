#collection{
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  font-size: 40rpx;
  font-weight: 200;
  font-style: italic;
  /* color: #838 */
}
#item-list{
  display: flex; 
  /* justify-content: left;  */
  flex-direction: column;
  padding: 10rpx;
 
}

/* 列表项目 */
.itemRoot{
  display: flex;
  flex-direction: column;
  border: 1rpx solid gray;
  
  border-radius: 2%;  
}
/* 文章图片 */
.itemRoot image{
  width: 95%;
  height: 400rpx;
  margin: 19rpx;
  display: block;
  /* border-radius: 10%;   */
  /* 设置边界圆角 */
}
#title{
  font-size: 40rpx;
  font-weight: 500rpx;
  /* margin-left: 20rpx; */
  margin-top: 15rpx;
  text-align: center;
}
#item-text{
  margin-top: 20rpx;
  margin-right: 10rpx;
  font-size: 25rpx;
  color: #666;
  float: right;
}