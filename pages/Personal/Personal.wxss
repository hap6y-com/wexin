.myLogin {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #48bcb9;
}
/* 头像样式 */
.avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 40rpx;
  border-radius: 50%;
}

/* 用户名 */
.nickname {
   color: rgb(250, 241, 241); 
   font-size: 36rpx;
   /* font-style: italic; */
   margin-top: 30rpx;
}
#collection{
  padding: 20rpx;
  font-size: 40rpx;
  font-weight: 500;
  font-style: italic;
  /* color: #838 */
}
#item-list{
  display: flex; 
  /* justify-content: left;  */
  flex-direction: column;
  padding: 15rpx;
}

/* 列表项目 */
.itemRoot{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}
scroll-view{
  width: 90rpx;
  height:90rpx;
  border-radius: 10%;
  margin-bottom: 10rpx;
}

/* 文章图片 */
.itemRoot image{
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  display: block;
  line-height: 60rpx;
  font-size: 10pt;
  border-radius: 10%;  
  /* 设置边界圆角 */
}
.item-title{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
#title{
  font-size: 36rpx;

}
#item-text{
  margin-top: 5rpx;
  font-size: 25rpx;
  color: #666
}